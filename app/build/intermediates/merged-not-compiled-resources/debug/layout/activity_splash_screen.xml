<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.german.keyboard.app.free.changes.Splash_Screen_Activity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:scaleType="centerInside"
        android:src="@drawable/header" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:max="100" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/asdadasd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/mainss"
        android:gravity="center"
        android:text="German Keyboard"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textwaitin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/please_wait_for_a_while"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>