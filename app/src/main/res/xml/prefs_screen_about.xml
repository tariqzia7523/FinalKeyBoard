<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:latin="http://schemas.android.com/apk/res-auto"
    android:title="@string/settings_screen_about"
    android:key="@string/settings_screen_about">
    <Preference
        android:icon="@mipmap/ic_launcher"
        android:summary="Version 1.0"
        android:title="@string/english_ime_name" />
    <PreferenceCategory android:title="A free and open-source Bangla keyboard">
        <Preference android:title="Visit Otobi website" android:summary="https://otobikb.github.io">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://otobikb.github.io/" />
        </Preference>
        <Preference android:title="Developer" android:summary="@string/about_developer" >
            <intent android:action="android.intent.action.VIEW"
                android:data="https://facebook.com/RHJihan" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="Find me on">
        <Preference android:title="@string/about_facebook" android:summary="https://facebook.com/RHJihan" >
            <intent android:action="android.intent.action.VIEW"
                android:data="https://facebook.com/RHJihan" />
        </Preference>
        <Preference android:title="@string/about_portfolio" android:summary="https://rhjihan.github.io" >
            <intent android:action="android.intent.action.VIEW"
                android:data="https://rhjihan.github.io/" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
